<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pin_label"
            android:text="Register"/>


        <com.mihaiapps.securevault.controls.PinEntryEditText
            android:background="@null"
            android:id="@+id/txt_pin_entry"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_gravity="center_horizontal"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:layout_marginTop="32dp"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@android:color/transparent"
            android:textIsSelectable="false"
            android:textSize="0px"
            android:visibility="visible"
            app:pinBackgroundDrawable="@drawable/bg_pin_round"
            app:pinCharacterSpacing="8dp"
            app:pinLineColors="@color/pin_line_colors"
            app:pinBackgroundIsSquare="true"
            app:pinTextBottomPadding="4dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/change_password_btn"
            android:text="Change password"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zeroize_btn"
            android:text="Zeroize"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgot_password_redirect_btn"
            android:text="Forgot password"/>
    </LinearLayout>

</FrameLayout>